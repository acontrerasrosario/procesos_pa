@model IEnumerable<procesos_app.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtyCredits)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreRequisitCredits)
        </th>
        <th>
            @Html.DisplayName("Area")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtyCredits)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreRequisitCredits)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Areas.Name)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
