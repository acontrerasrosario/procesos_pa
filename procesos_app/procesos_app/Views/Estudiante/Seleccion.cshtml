@model procesos_app.Models.MotherOfModels
@{
    ViewBag.Title = "Seleccion";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}


<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="  https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"></script>
<script src="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css"></script>
<script src="~/Scripts/DetalleSeccion.js"></script>

<style>
    .section-title {
        padding-left: 0px;
        padding-top: 20px;
        font-weight: 100;
        margin: 0;
    }

    .light-bottom-border {
        border-bottom: 1px solid #DEDEDE;
    }

    .section {
        padding: 5px 0;
        margin: 20px 10px;
        background-color: white;
    }

    .section_info {
        margin: 20px;
    }

    .HBG {
        padding: 7px 10px;
        background-color: #404040;
        color: #FFF;
    }

    .block-dashboard {
        width: 160px;
        height: 187px;
        display: inline-block;
        padding: 10px;
    }
</style>

    <div>
        <h3 class="section-title text-center">Seleccion de Asignaturas</h3>
        <hr />
    </div>
<div>
    <div>
        <h4 class="HBG">Listado de Asignaturas [Inserte Trimestre Aqui]</h4>
    </div>
    <div class="text-center text-danger">
        Aqui se supone que va algo vacano WAIT FOR IT!
    </div>
</div>
<div>
    <div>
        <h4 class="HBG">Listado de Asignaturas [Inserte Trimestre Aqui]</h4>
    </div>
    <div>
        <table id="Seleccion" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Area</th>
                    <th>Creditos</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Area</th>
                    <th>Creditos</th>
                    <th>Detalle</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model.ListaSubject)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Areas</td>
                        <td class="text-center">@item.QtyCredits</td>
                        <td class="text-center">
                            <a id="@item.Id" class="open-Modal glyphicon glyphicon-eye-open" href="#" data-toggle="modal" data-target="#myModal"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#Seleccion').DataTable();
    });
</script>


<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" id="Contenedor">
                <p>Some text in the modal.</p>
                <input type="text" name="DNI" id="DNI" value="" />
            </div>          
        </div>
    </div>
</div>