<style>
    .section-title {
        padding-left: 0px;
        padding-top: 20px;
        font-weight: 100;
        margin: 0;
    }

   
    .section {
        padding: 5px 0;
        margin: 20px 10px;
        background-color: white;
    }

    .section_info {
        margin: 20px;
    }

    .HBG {
        padding: 7px 10px;
        background-color: #404040;
        color: #FFF;
    }

    .block-dashboard {
        width: 160px;
        height: 187px;
        display: inline-block;
        padding: 10px;
    }

    .Tableback {
        background:#c10d0d;
            color: white;
        
    }
</style>
<div ng-controller="RevisionController">
    <div>
        <h3 class="section-title text-center">REVISION DE CALIFICACIONES</h3>
        <hr />
    </div>
    <div>
        
        <div>
            <h4 class="HBG">Asignaturas - [Inserte Trimestre Aqui!]</h4>
        </div>
        <div style="padding-left:20px; padding-right:20px;">
            <table class="table table-striped table-bordered" id="SeccionesEstudiante" cellspacing="0" width="100%">
                <thead class="Tableback">
                    <tr>
                        <th>Seccion</th>
                        <th>Materia</th>
                        <th>Profesor/a</th>
                        <th>Calificacion</th>
                        <th>Solicitar</th>
                    </tr>
                </thead>
                <tbody class="table-striped">
                    <tr ng-repeat="s in Seccion | orderBy: 'name'">
                        <td>{{s.seccion}}</td>
                        <td>{{s.codigo}} - {{s.nombre}}</td>
                        <td>{{s.profesor}}</td>
                        <td>{{s.calificacion}}</td>
                        <td>
                            <a ng-if="!Seccion.solicitud" class="btn btn-primary" ng-click="solicitar(s)"> Ir </a>
                        </td>
                        <td>
                            <a ng-if="Seccion.solicitud" class="btn btn-primary" ng-click="solicitar(s)"> Ir </a>
                        </td>
                        
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
