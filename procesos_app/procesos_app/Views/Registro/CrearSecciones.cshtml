
@{
    ViewBag.Title = "CrearSecciones";
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
}
<link rel="stylesheet" href="~/Content/chosen.min.css">

<h2>Crear secciones</h2>

<div class="container body-content" ng-controller="AddSectionController">
    <form class="form-horizontal">
        <div class="row">
            <div class="col-md-8">


                <div class="form-group">
                    <label class="col-md-4 control-label">Nombre: </label>
                    <input type="text" id="SecName" ng-model="SeccionNueva.name" class="form-control" />
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label">Materia: </label>
                    <select class="form-control" id="Materia" required>
                        <option value="0" disabled selected hidden> - Seleccionar - </option>
                        <option ng-repeat="ts in Materia" value="{{ts.id}}">{{ts.name}}</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Tipo de Seccion: </label>
                    <select class="form-control" id="TipoSeccion" required>
                        <option value="0" disabled selected hidden> - Seleccionar - </option>
                        <option ng-repeat="ts in tipoSeccion" value="{{ts.value}}">{{ts.name}}</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Curso: </label>
                    <select class="form-control" id="curso" required>
                        <option value="0" disabled selected hidden> - Seleccionar - </option>
                        <option ng-repeat="c in cursos" value="{{c.id}}">{{c.name}}</option>
                    </select>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label class="col-md-4 control-label">DIAS</label>
                        <div class="col-md-4">


                            <select class="form-control select" id="dia1" required>
                                <option value="0" disabled selected hidden> - Seleccionar - </option>
                                <option ng-repeat="h1 in horario" value="{{h1.horarioId}}">{{h1.nameTotal}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" ng-click="Agregar()" class="btn btn-default" href="#" role="button">Agregar</button>
                    </div>
                </div>
            </div>

    </form>


    <div class="table-reponsive">
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Seccion</th>
                    <th>Curso</th>
                    <th>Horario</th>
                    <th>Trimestre</th>
                    <th>Profesor</th>
                    <th>Materia</th>
                </tr>

            </thead>
            <tbody class="table-striped">
                <tr ng-repeat="sa in SeccionesActivas | orderBy: 'name'">
                    <td>{{sa.secName}}</td>
                    <td>{{sa.curso }}</td>
                    <td>{{sa.horario }}</td>
                    <td>{{sa.secTrimestre }}</td>
                    <td>{{sa.nombreProf }}</td>
                    <td>{{sa.materia }}</td>
                    <td><a class="btn btn-danger" ng-click="eliminar(v)"> Eliminar </td>

                </tr>

            </tbody>
        </table>

    </div>

</div>

<script src="~/Scripts/chosen.jquery.min.js" type="text/javascript"> </script>
<script>
    $(".chosen-select").chosen({ no_results_text: "Opss, no se encuentra!" }, { max_selected_options: 5 }); 
</script>

