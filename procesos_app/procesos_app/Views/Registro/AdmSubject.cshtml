
@{
    ViewBag.Title = "AdmSubject";
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
}


<h2>Listado de Materias</h2>



<div class="container body-content" ng-controller="AdminSubjectController">


    <div class="row">
        <div class="col-md-8">
            <input type="type" name="name" value="" />
        </div>
    </div>

    <div class="table-reponsive">
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Creditos</th>
                    <th>Area</th>
                    <th>Accion</th>
                </tr>

            </thead>
            <tbody class="table-striped">
                <tr ng-repeat="s in Subjects">
                    <td>{{s.name}}</td>
                    <td>{{s.qtyCredits}}</td>
                    <td>{{s.area}}</td>
                    <td>
                        <a class="btn btn-primary" ng-click="ver(s)"> Ir </a>
                    </td>
                </tr>

            </tbody>
        </table>

    </div>
   
    
    <form name="subjectForm" class="form-horizontal">

        <div class="row">
            <div class="col-md-8">

                <div class="form-group">
                    <label class="col-md-4 control-label">Nombre</label>

                    <input class="form-control" type="text" ng-model="currSubject.name" id="name" name="input" ng-minlength="3" ng-maxlength="10" required />

                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Codigo</label>
                    <input class="form-control" type="text" name="input" ng-model="currSubject.codigo" id="codigo" value="" required />

                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">No. de Creditos</label>

                    <input class="form-control" id="qntityCredito" type="number" min="1" max="5" ng-model="currSubject.qtyCredits" name="input" required />

                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Area</label>

                    <select class="form-control" id="areaSelect" required>
                        <option value="0" disabled selected hidden> - Seleccionar - </option>
                        <option ng-repeat="a in Areas" value="{{a.id}}">{{a.name}}</option>
                    </select>
                </div>

                <div class="form-group">

                    <button type="submit"
                            ng-click="modificar(currSubject)" class="btn btn-default" href="#" role="button">
                        Modificar
                    </button>

                </div>


            </div>

        </div>
    </form>




</div>

    




