
@{
    ViewBag.Title = "NewSubject";
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
}

<h2>Ingresar Materia</h2>


<div class="container body-content" ng-controller="AddSubjectsController">
    <form class ="form-horizontal">

        <div class="row">
            <div class="col-md-8">

                <div class="form-group">
                    <label class="col-md-4 control-label">Nombre</label>

                    <input class="form-control" type="text" ng-model="newSubject.Name" id="name" name="input" ng-minlength="3" ng-maxlength="10" required />

                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Codigo</label>
                    <input class="form-control" type="text" name="input" ng-model="newSubject.Codigo" id="codigo" value="" required/>

                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">No. de Creditos</label>

                        <input class="form-control" id="qntityCredito" type="number" min="1" max="5" ng-model="newSubject.QtyCredits" name="input" required/>

                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Area</label>

                        <select class="form-control"  id="areaSelect" required>
                            <option value="0" disabled selected hidden> - Seleccionar - </option>
                            <option ng-repeat="a in Areas" value="{{a.id}}">{{a.name}}</option>
                        </select>
                </div>

                <div class="form-group">

                        <button type="submit"
                                ng-click="Agregar()" class="btn btn-default" href="#" role="button">Agregar</button>

                </div>


            </div>

        </div>
    </form>
</div>
