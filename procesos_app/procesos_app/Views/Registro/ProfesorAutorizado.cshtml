
@{
    ViewBag.Title = "ProfesorAutorizado";
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
}

<h2>Profesores Autorizado</h2>

<div class="container body-content" ng-controller="ProfesorAutorizacionController">
    <form class="form-horizontal">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label class="col-md-4 control-label">Profesor</label>
                    <select class="form-control" id="profesor" required>
                        <option value="0" disabled selected hidden> - Seleccionar - </option>
                        <option ng-repeat="p in Profesores" value="{{p.id}}">{{p.name}}</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Materia</label>
                    <select class="form-control" id="materia" required>
                        <option value="0" disabled selected hidden> - Seleccionar - </option>
                        <option ng-repeat="m in Materias" value="{{m.materiaId}}">{{m.materiaName}}</option>
                    </select>
                </div>


                <div class="form-group">
                    <button type="submit" ng-click="Agregar()" class="btn btn-default" href="#" role="button">Agregar</button>
                </div>
            </div>
        </div>
    </form>


    <div class="table-reponsive">
        <table class="table table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Profesor</th>
                    <th>Materia Autorizada</th>
                    <th> Eliminar </th>
                </tr>

            </thead>
            <tbody class="table-striped">
                <tr ng-repeat="v in autorizaciones | orderBy: 'name'">
                    <td>{{v.profesorName}}</td>
                    <td>{{v.materiaName }}</td>
                    <td><a class="btn btn-danger" ng-click="eliminar(v)"> Eliminar </td>

                </tr>

            </tbody>
        </table>

    </div>

</div>