<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Procesos Intec</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .colorBg {
            color: #444;
        }

        .BgColor {
            color: #444;
        }

        .logo{
            vertical-align:middle;
            align-items: flex-start;

            
        }

       
    </style>

</head>
<body class="BgColor">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">              
                <a href="">
                    <img class="logo" src="~/Content/images/logo_top.png">
                </a>
            </div>
            <div class="navbar-collapse collapse">                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        <h3 class="colorBg"> Opciones</h3>
    </div> 
    <div class="col-md-2 colorBg">
        <input class="btn colorBg" value="Publicacion" /><br />
        <input class="btn colorBg" value="Evaluaciones" /><br />
        <input class="btn colorBg" value="Revision Calificaciones" /><br />
        <input class="btn colorBg" value="Reportes" /><br />
        

    </div>

    <div class="col-md-10 BgColor" id="Contenedor">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer></footer>
        </div>
    </div>
       
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
